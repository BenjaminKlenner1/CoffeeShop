<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShop.Views.MenuPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="coffeelogo" />
            <Button x:Name="btn1" WidthRequest="300" HorizontalOptions="Center" BackgroundColor="#2d4a58" Text="Espresso" Clicked="Espresso_OnClicked"/>
            <Button x:Name="btn2" WidthRequest="300" HorizontalOptions="Center" BackgroundColor="#2d4a58" Text="Hot Drinks" Clicked="HotDrinks_OnClicked"/>
            <Button x:Name="btn3" WidthRequest="300" HorizontalOptions="Center" BackgroundColor="#2d4a58" Text="Cold Drinks" Clicked="ColdDrinks_OnClicked"/>
            <Button x:Name="btn4" WidthRequest="300" HorizontalOptions="Center" BackgroundColor="#2d4a58" Text="Quick Bites" Clicked="QuickBites_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>